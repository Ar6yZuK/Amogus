<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
			 x:Class="Amogus.Views.AmogusPage"
			 Shell.NavBarIsVisible="False">
	<Grid RowDefinitions="*, auto, auto">
		<Image Aspect="Fill" x:Name="image" Source="among_us_amogus.gif" />
		<toolkit:MediaElement Source="embed://amogus.mp3" x:Name="media" MinimumHeightRequest="0" HeightRequest="0" Grid.Row="1"/>
		<Button Text="Play" Clicked="Button_Clicked" Grid.Row="2"/>
	</Grid>
</ContentPage>